<% layout('/layouts/boilerplate') %>
    <div id="map"></div>
    <!-- cluster map -->



    <div class="container">
        <div class="mt-5 mb-5 ms-5">
            <div class="row">
                <div class="col-10">
                    <h1>All Campgrounds</h1>
                </div>
                <div class="col-2 justify-content-end align-self-center">
                    <a class="btn btn-lg btn-success font-weight-bold border-white text-white" href="/campgrounds/new">
                        Add Camps
                    </a>
                </div>
            </div>


        </div>

        <ul>
            <% for(let i of campgrounds) { %>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <% if(i.images.length) { %>
                                <img class="img-fluid" alt="" src="<%=i.images[0].url%>">
                                <% } else { %>
                                    <img class="img-fluid" alt=""
                                        src="https://res.cloudinary.com/dzgcpe7xa/image/upload/v1619541445/YelpCamp/default_camp_ofjlce.jpg">
                                    <% } %>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= i.title %>
                                </h5>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <%= i.location %>
                                    </small>
                                </p>
                                <a class="btn btn-primary" href="/campgrounds/<%= i._id %> ">View <%= i.title %> </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </ul>
    </div>
    <script src="/javascripts/clusterMap.js"></script>
    <script>
        const campsData = { features: JSON.parse('<%- JSON.stringify(campgrounds) %>') };

    </script>